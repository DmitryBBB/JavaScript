<body>
    <script>
        /*Задать температуру в градусах по Цельсию. Вывести в alert соответствующую температуру в
градусах по Фаренгейту. Подсказка: расчёт идёт по формуле:*/
        "use strict";
        let Tc = +prompt("Введите температуру в градусах Цельсия для перевода в градусы Фаренгейта: ");
        let Tf = (9 / 5) * Tc + 32;
        alert(Tf + " градусов Фаренгейта");
    </script>
    <script>
        /*Объявить две переменные: admin и name. Записать в name строку "Василий". Скопировать
значение из name в admin. Вывести в консоль переменную admin (должно вывести "Василий").*/
        "use strict";
        let name = "Василий";
        let admin = name;
        console.log(admin)
    </script>
    <script>
        "use strict";
        console.log(10 + 10 + "10"); //Происходит сложение первый 2-х значений т.к. они являются числами, далее прибавляется строка(конкатенация)
        console.log(10 + "10" + 10); //конкатенация(соединение числа, строки, числа)
        console.log(10 + 10 + +"10"); //сумма чисел, перевод из строки в числовое значение за счет + перед строкой.
        console.log(10 / -""); //отрицательная бесконечность. т.к. происходит деление числа на 0 со знаком -
        console.log(10 / +"2,5"); //Not a number, не является числом т.к. точка между числами

    </script>
</body>

